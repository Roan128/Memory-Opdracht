<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memory.GUI.GamePage"
             Title="GamePage">

    <ScrollView>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
         
            VerticalOptions="Center">

            <Label 
                Text="Type the name you want to have."
                FontSize="18"
                HorizontalOptions="Center" />
            <Entry x:Name="PlayerName" Placeholder="Name..." />

            <Label 
                Text="Type the amount of cards you want to play with."
                FontSize="18"
                HorizontalOptions="Center" />
            <Entry x:Name="CardAmount" Placeholder="Amount..." />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>